@model Team27_BookshopWeb.Areas.admin.Models.PaymentMethodViewModel
@{
    ViewData["Title"] = "Danh sách nhân viên";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section style {
    <link rel="stylesheet" type="text/css" media="screen" href="~/Team27StaticFiles/mycss/admin.css" />
}

@{ Html.RenderPartial("_AdminAlert", Model.MessagesView); }

<div class="card searchfield">

    <form method="GET" enctype="multipart/form-data">
        <div class="card-body searchbox">
            <div class="row">
                <div class="col-sm-4">
                    <label for="select" class=" form-control-label">Lọc theo các thanh toán: </label>
                </div>
                <span class="col-sm-5">
                    <select asp-for="filter" class="form-control" onchange="this.form.submit();">
                        <option value="2">Tất cả</option>
                        <option value="1">Hỗ trợ</option>
                        <option value="0">Không hỗ trợ</option>
                    </select>
                </span>
            </div>
        </div>
    </form>
</div>


<div class="row">
    <div class="col-md-12">
        <!-- DATA TABLE -->

        <h3 class="title-5 m-b-35 ds">Danh sách phương thức thanh toán</h3>
        <div class="table-data__tool">

            <div class="table-data__tool-right">
                <button class="au-btn au-btn-icon au-btn--green au-btn--small">
                    <a asp-action="Create">
                        <i class="zmdi zmdi-plus"></i>Thêm
                    </a>
                </button>
            </div>
        </div>

        @if (Model.payments.Count() > 0)
        {
            <div class="table-responsive table-responsive-data3">
                <table class="table table-data3">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Tên phương thức thanh toán</th>
                            <th>Hỗ trợ</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.payments)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem => item.DisplayName)
                                </td>
                                <td>
                                    <div class="table-data-feature">

                                        <a class="item" asp-action="Edit" asp-route-id="@item.Id">
                                            <i class="zmdi zmdi-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        }
        else
        {
            <div class="sufee-alert alert with-close alert-warning alert-dismissible fade show">
                <span class="badge badge-pill badge-warning">Warning</span>
                Không có phương pháp thanh toán cần tìm
            </div>
        }
        <div>

        </div>
    </div>
</div>


