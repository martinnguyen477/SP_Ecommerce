@model Team27_BookshopWeb.Models.LoginRegisterViewModel

@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/_Master.cshtml";
}

@section style {
    <link rel="stylesheet" type="text/css" media="screen" href="~/Team27StaticFiles/mycss/login-register.css" />
}

<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Đăng nhập - đăng ký</li>
                </ol>
            </nav>
        </div>
    </div>
</section>

<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <!-- ALERT -->
        @{ Html.RenderPartial("_AdminAlert", Model.MessagesView); }
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
                <!-- Login Form s-->
                <form method="POST" asp-action="Register" id="register-form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="login-form">
                        <h4 class="login-title">Khách hàng mới</h4>
                        <p><span class="font-weight-bold">Tôi là khách hàng mới</span></p>
                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="Register.Name">Họ tên</label>
                                <input class="mb-0 form-control" type="text" asp-for="Register.Name"
                                       placeholder="Nhập đầy đủ tên">
                                <span asp-validation-for="Register.Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb--10">
                                <label asp-for="Register.Gender">Giới tính</label>
                                <input type="radio" id="male" asp-for="Register.Gender" value="0"><span class="nam">Nam</span>
                                <input type="radio" id="female" asp-for="Register.Gender" value="1" class="inputNu"><span class="nu">Nữ</span>
                                <span asp-validation-for="Register.Gender" class="text-danger"></span>

                            </div>
                            <div class="col-6 mb--10">
                                <label asp-for="Register.Phone">Số điện thoại</label>
                                <input class="mb-0 form-control" type="text" asp-for="Register.Phone" placeholder="Nhập số điện thoại vào đây.." pattern="^0{1}\d{9}$">
                                <span asp-validation-for="Register.Phone" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="Register.Address">Địa chỉ </label>
                                <input class="mb-0 form-control" type="text" asp-for="Register.Address" placeholder="Nhập địa chỉ vào đây..">
                                <span asp-validation-for="Register.Address" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="Register.Email">Email</label>
                                <input class="mb-0 form-control" type="email" asp-for="Register.Email" placeholder="Nhập email vào đây.." pattern="^[\w]{1,}[\w.+-]{0,}@@[\w-]{2,}([.][a-zA-Z]{2,}|[.][\w-]{2,}[.][a-zA-Z]{2,})$">
                                <span asp-validation-for="Register.Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="Register.Username">Tên tài khoản</label>
                                <input class="mb-0 form-control" type="text" asp-for="Register.Username" placeholder="Nhập vào tên tài khoản">
                                <span asp-validation-for="Register.Username" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 mb--20">
                                <label asp-for="Register.Password">Mật khẩu</label>
                                <input class="mb-0 form-control" type="password" asp-for="Register.Password" placeholder="Nhập vào mật khẩu ">
                                <span asp-validation-for="Register.Password" class="text-danger"></span>
                            </div>
                            <div class="col-lg-6 mb--20">
                                <label asp-for="Register.PasswordConfirm">Xác nhận mật khẩu</label>
                                <input class="mb-0 form-control" type="password" asp-for="Register.PasswordConfirm" placeholder="Nhập vào mật khẩu ">
                                <span asp-validation-for="Register.PasswordConfirm" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <button class="btn btn-outlined" type="submit">ĐĂNG KÝ</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                <form asp-action="Login" method="POST" id="login-form" asp-route-ReturnUrl="@ViewBag.ReturnUrl">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="login-form">
                        <h4 class="login-title">Khách hàng của kho sách</h4>
                        <p><span class="font-weight-bold">Tôi là khách hàng đã có tài khoản</span></p>
                        <div class="row">
                            <div class="col-md-12 col-12 mb--15">
                                <label asp-for="Login.Username">Tên tài khoản</label>
                                <input class="mb-0 form-control" type="text" asp-for="Login.Username" placeholder="Nhập tên tài khoản">
                            </div>
                            <div class="col-12 mb--20">
                                <label asp-for="Login.Password">Mật khẩu</label>
                                <input asp-for="Login.Password" class="mb-0 form-control" type="password" placeholder="Nhập mật khẩu">
                            </div>
                            <div class="col-md-12">
                                <button class="btn btn-outlined" type="submit">ĐĂNG NHẬP</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
	</div>

@section script {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.16.0/jquery.validate.js"></script>
    <script src="~/Team27StaticFiles/myjs/validation-form.js"></script>
}
