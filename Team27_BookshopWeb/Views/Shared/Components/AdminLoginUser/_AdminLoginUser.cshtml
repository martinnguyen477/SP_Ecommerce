@{
}
@if (User.Identity.IsAuthenticated)
{
    <div class="header-wrap">

        <div class="header-button">

            <div class="account-wrap">
                <div class="account-item clearfix js-item-menu">
                    <div class="image">
                        <img src="~/Team27StaticFiles/Admins/images/icon/@(ViewBag.Gender==1 ? "female.png" : "male.png")" alt="@ViewBag.Name" />
                    </div>
                    <div class="content">
                        <a class="js-acc-btn" href="#">@ViewBag.Name</a>
                    </div>
                    <div class="account-dropdown js-dropdown">
                        <div class="info clearfix">
                            <div class="image">
                                <a href="#">
                                    <img src="~/Team27StaticFiles/Admins/images/icon/@(ViewBag.Gender==1 ? "female.png" : "male.png")" alt="@ViewBag.Name" />
                                </a>
                            </div>
                            <div class="content">
                                <h5 class="name">
                                    <a href="profile">@ViewBag.Name</a>
                                </h5>
                                <span class="email">@ViewBag.UserEmail</span>
                            </div>
                        </div>
                        <div class="account-dropdown__body">
                            <div class="account-dropdown__item">
                                <a href="/admin/profile">
                                    <i class="zmdi zmdi-account"></i>Tài khoản
                                </a>
                            </div>
                        </div>
                        <div class="account-dropdown__footer">
                            <a href="/admin/logout">
                                <i class="zmdi zmdi-power"></i>Đăng xuất
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

