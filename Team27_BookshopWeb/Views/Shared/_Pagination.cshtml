@model Team27_BookshopWeb.Models.PaginationViewModel
@{ 
    string currentURL = Context.Request.Path + Context.Request.QueryString;
    //Xóa page cũ trên url
    if (currentURL.IndexOf("page=") != -1) currentURL = currentURL.Remove(currentURL.IndexOf("page=")-1);

    if (!currentURL.Contains('?')) currentURL += "?page=";
    else currentURL += "&page=";
}

    <div class="pagination">
        <a asp-route-page="@(Model.CurrentPage != 1 ? Model.CurrentPage -1 : 1)">&laquo;</a>
        @for (int i = 1; i <= Model.Pages; i++)
        {

            if (i != Model.CurrentPage)
            {
                <a href="@currentURL@i">@i</a>
            }
            else
            {
                <a href="@currentURL@i" class="active">@i</a>
            }
        }
        <a asp-route-page="@(Model.CurrentPage != Model.Pages ? Model.CurrentPage + 1 : Model.Pages)">&raquo;</a>
    </div>
