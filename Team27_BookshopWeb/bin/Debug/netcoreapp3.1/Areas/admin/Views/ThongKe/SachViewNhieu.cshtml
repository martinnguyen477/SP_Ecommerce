@model Team27_BookshopWeb.Areas.admin.Models.TKSachViewNhieuViewModel

@{
    ViewData["Title"] = "TK Sach View Nhieu Nhat";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section style {
    <link rel="stylesheet" type="text/css" media="screen" href="~/Team27StaticFiles/mycss/admin.css" />
    <link rel="stylesheet" type="text/css" href="~/Team27StaticFiles/mycss/thongke.css">
}
<div class="card searchfield">
    <form method="GET" enctype="multipart/form-data">
        <div class="card-body searchbox">
            <div class="row">
                <div class="col-sm-3">
                    <label for="select" class=" form-control-label">Số liệu được tính theo: </label>
                </div>
                <span class="col-sm-5">
                    <select asp-for="day" class="form-control" onchange="this.form.submit();">
                        <option value=2>24H Qua</option>
                        <option value=7>1 Tuần</option>
                        <option value=30>1 Tháng</option>
                    </select>
                </span>
            </div>
        </div>
    </form>
</div>

    <div class="row">
        <div class="col-lg-12">

            <div class="titleTK"><strong>Thống kê 10 sách có lượt xem nhiều nhất theo @Model.tittle</strong></div>
            <br>
            <div id="piechart_div">

            </div>
            <br>
            <br>
            <div class="table-responsive table--no-card m-b-30">
                <table class="table table-borderless table-striped table-earning">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Mã sách</th>
                            <th>Tên sách</th>
                            <th>Loại sách</th>
                            <th>Tác giả</th>
                            <th class="text-right">Số lượt xem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < 10; i++)
                        {
                            var item = Model.listBookBestViewed.ElementAt(i);
                            <tr>
                                <td></td>
                                <td>@item.Book.Id</td>
                                <td>@item.Book.Name</td>
                                <td>@item.Book.Category.Name</td>
                                <td>@item.Book.Author.Name</td>
                                <td id="highlight">@item.Count</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @section script {
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        <script src="~/Team27StaticFiles/myjs/admin-topviewchart.js"></script>

    }


